root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{package.json,*.yml,*.jade,*.pss,*.css,*.js,*.md,.*}]
indent_size = 2

[{changelog.md,*.html,.*}]
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false
