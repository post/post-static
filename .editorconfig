root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{package.json,*.yml,*.jade,*.pss,*.css}]
indent_size = 2

[changelog.md]
insert_final_newline = false

[*.html]
insert_final_newline = false

[{*.js,*.jsx}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
